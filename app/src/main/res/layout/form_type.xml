<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_marginTop="2dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="8dp"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ln_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pre-Operation"
                android:textAlignment="center"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_below="@id/ln_titulo"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <net.igenius.customcheckbox.CustomCheckBox
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="6dp"
                app:color_checked="@color/colorPrimary"
                app:color_tick="@android:color/white"
                app:color_unchecked="@color/colorAccent"
                app:color_unchecked_stroke="@color/colorAccent"
                app:small_tick="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:text="Questionary"
                android:textSize="10sp" />


            <net.igenius.customcheckbox.CustomCheckBox
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="6dp"
                app:color_checked="@color/colorPrimary"
                app:color_tick="@android:color/white"
                app:color_unchecked="@color/colorAccent"
                app:color_unchecked_stroke="@color/colorAccent"
                app:small_tick="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:text="MIRI"
                android:textSize="10sp" />

            <net.igenius.customcheckbox.CustomCheckBox
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="6dp"
                app:color_checked="@color/colorPrimary"
                app:color_tick="@android:color/white"
                app:color_unchecked="@color/colorAccent"
                app:color_unchecked_stroke="@color/colorAccent"
                app:small_tick="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:text="Appoiment"
                android:textSize="10sp" />


            <net.igenius.customcheckbox.CustomCheckBox
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="6dp"
                app:color_checked="@color/colorPrimary"
                app:color_tick="@android:color/white"
                app:color_unchecked="@color/colorAccent"
                app:color_unchecked_stroke="@color/colorAccent"
                app:small_tick="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:text="Payment"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_implant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="64dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/titulo_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_titulo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout

            android:id="@+id/cont_lado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo_form"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_info_lado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/img_ico_com"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/cont_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cont_lado"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/img_ico_com"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/surgery_date"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/txt_fecha"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="TextView"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/cont_serie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cont_fecha"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_ico_com"
                    android:layout_marginLeft="16dp"
                    android:padding="8dp"
                    android:text="@string/serial_number"
                    android:textAlignment="textStart" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/txt_serie_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/txt_serie"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/cont_referencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cont_serie"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/img_ico_com"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/Reference"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/txt_referencia"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="TextView"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/cont_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cont_referencia"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/img_ico_com"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/Type"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/txt_tipo"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="TextView"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/cont_textura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cont_tipo"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/img_ico_com"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/Texture"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/txt_textura"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="TextView"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/cont_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cont_textura"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/img_ico_com"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/Base"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/txt_base"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="TextView"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/cont_proyeccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cont_base"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/img_ico_com"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/Projection"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/txt_proyeccion"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="TextView"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/cont_volumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cont_proyeccion"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/img_ico_com"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/Volume"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/txt_volumen"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="TextView"
                android:textAlignment="center" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>